<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:background="@drawable/touch_selector"
    android:id="@+id/pipe_list_item" >

    <ImageView
        android:id="@+id/iv_tag_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:contentDescription=""
        android:src="@drawable/ic_local_movies_black_48dp" />

    <TextView
        android:id="@+id/tv_tag_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/iv_tag_image"
        android:layout_centerVertical="true"
        android:text=""
        android:textColor="@color/black"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/tv_tag_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/iv_tag_image"
        android:layout_below="@+id/tv_tag_name"
        android:visibility="gone"
        android:text=""
        android:textStyle="italic"
        android:textColor="@color/colorMediumGrey"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    <!---->

</RelativeLayout>
