<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_doamaker"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorNewDark"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:mContext="com.adaptivehandyapps.ahathing.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="@dimen/activity_horizontal_padding"
        android:paddingRight="@dimen/activity_horizontal_padding"
        android:visibility="visible"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorNewAccent"
        android:text="Create a new thing!" />

    <!-- moniker -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_moniker_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_padding"
            android:paddingRight="@dimen/activity_horizontal_padding"
            android:visibility="visible"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorNew"
            android:text="Moniker-> " />
        <EditText
            android:id="@+id/et_moniker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_edit_padding"
            android:paddingRight="@dimen/activity_horizontal_edit_padding"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:fontFamily="sans-serif-condensed"
            android:text="thing1"
            android:inputType="text"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColor="@color/colorNewAccent"
            android:background="@color/colorNew"
            />

    </LinearLayout>
    <!-- headline -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_headline_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_padding"
            android:paddingRight="@dimen/activity_horizontal_padding"
            android:visibility="visible"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorNew"
            android:text="Headline -> " />
        <EditText
            android:id="@+id/et_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_edit_padding"
            android:paddingRight="@dimen/activity_horizontal_edit_padding"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:fontFamily="sans-serif-condensed"
            android:text=""
            android:hint="currently showing..."
            android:inputType="textMultiLine"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColor="@color/colorNewAccent"
            android:background="@color/colorNew"
            />

    </LinearLayout>
    <!-- copy checkbox -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <CheckBox android:id="@+id/cb_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorNew"
            android:checked="false"
            android:text="Remove Original"/>

    </LinearLayout>
    <!-- last update -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_padding"
            android:paddingRight="@dimen/activity_horizontal_padding"
            android:visibility="visible"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorNew"
            android:text="Last Updated" />
        <TextView
            android:id="@+id/tv_last_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_padding"
            android:paddingRight="@dimen/activity_horizontal_padding"
            android:visibility="visible"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorNewAccent"
            android:background="@color/transparent"
            android:text="ddMMMyy HH:mm:ss z" />

    </LinearLayout>
    <!-- buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <!-- create/destroy/cancel buttons -->
        <Button style="@style/Widget.AppCompat.Button.Colored"
            android:id="@+id/button_daomaker_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:paddingLeft="@dimen/activity_horizontal_padding"
            android:paddingRight="@dimen/activity_horizontal_padding"
            android:visibility="gone"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorNewAccent"
            android:background="@color/colorNew"
            android:text="Create"/>
        <Button
            android:id="@+id/button_daomaker_destroy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:paddingLeft="@dimen/activity_horizontal_padding"
            android:paddingRight="@dimen/activity_horizontal_padding"
            android:visibility="gone"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorNewAccent"
            android:background="@color/colorNew"
            android:text="Destroy"/>
        <Button
            android:id="@+id/button_daomaker_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:paddingLeft="@dimen/activity_horizontal_padding"
            android:paddingRight="@dimen/activity_horizontal_padding"
            android:visibility="gone"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorNewAccent"
            android:background="@color/colorNew"
            android:text="Cancel"/>

    </LinearLayout>

    <!-- tag list -->
    <LinearLayout
        android:id="@+id/ll_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:visibility="gone"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_padding"
            android:paddingRight="@dimen/activity_horizontal_padding"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorNew"
            android:text="Selected tags highlighted:" />

        <ListView
            android:id="@+id/listview_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@color/colorBrightGreen"
            android:textColor="@color/colorBrightGreen"
            >
        </ListView>
    </LinearLayout>

    <!-- theatre -->
    <LinearLayout
        android:id="@+id/ll_theatre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:visibility="gone"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <CheckBox android:id="@+id/cb_soundflourish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorNew"
                android:checked="false"
                android:text="Play Flourish Sounds"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <CheckBox android:id="@+id/cb_soundmusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorNew"
                android:checked="false"
                android:text="Play Music Sounds"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <CheckBox android:id="@+id/cb_soundaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorNew"
                android:checked="false"
                android:text="Play Action Sounds"/>

        </LinearLayout>
        <!-- epic list -->
        <LinearLayout
            android:id="@+id/ll_epics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_padding"
                android:paddingRight="@dimen/activity_horizontal_padding"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorNew"
                android:text="Selected tags highlighted:" />

            <ListView
                android:id="@+id/listview_epics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@color/colorBrightGreen"
                android:textColor="@color/colorBrightGreen"
                >
            </ListView>
        </LinearLayout>
    </LinearLayout>

    <!-- epic -->
    <LinearLayout
        android:id="@+id/ll_epic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:visibility="gone"
        android:orientation="vertical">
        <!-- story list - epic settings toggle button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <Button style="@style/Widget.AppCompat.Button.Colored"
                android:id="@+id/button_daomaker_storylist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:paddingLeft="@dimen/activity_horizontal_padding"
                android:paddingRight="@dimen/activity_horizontal_padding"
                android:visibility="gone"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorNewAccent"
                android:background="@color/colorNew"
                android:text="Show Story List"/>
        </LinearLayout>
        <!-- stage -->
        <LinearLayout
            android:id="@+id/ll_stagelist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_padding"
                android:paddingRight="@dimen/activity_horizontal_padding"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorNew"
                android:text="Stage:" />

            <Spinner
                android:id="@+id/spinner_stages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@color/colorTagListNotSelected"
                android:textColor="@color/colorBrightGreen"
                >
            </Spinner>
        </LinearLayout>

        <!-- order -->
        <LinearLayout
            android:id="@+id/ll_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_padding"
                android:paddingRight="@dimen/activity_horizontal_padding"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorNew"
                android:text="Order:" />

            <RadioGroup
                android:id="@+id/rg_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:background="@color/colorTagListNotSelected"
                android:textColor="@color/colorBrightGreen"
                android:orientation='horizontal'
                >
                <RadioButton
                    android:id="@+id/rb_forward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="forward"
                    android:checked="true" />
                <RadioButton
                    android:id="@+id/rb_reverse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="reverse"
                    android:checked="false" />
                <RadioButton
                    android:id="@+id/rb_randome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="random"
                    android:checked="false" />

            </RadioGroup>
        </LinearLayout>
        <!-- tally -->
        <LinearLayout
            android:id="@+id/ll_tally"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_tally"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_padding"
                android:paddingRight="@dimen/activity_horizontal_padding"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorNew"
                android:text="Tally ()" />

            <SeekBar
                android:id="@+id/seekbar_tally"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@color/colorTagListNotSelected"
                android:textColor="@color/colorBrightGreen"
                android:progress="25"
                >
            </SeekBar>
        </LinearLayout>
        <!-- tic -->
        <LinearLayout
            android:id="@+id/ll_tic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_tic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_padding"
                android:paddingRight="@dimen/activity_horizontal_padding"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorNew"
                android:text="Tics ():" />

            <SeekBar
                android:id="@+id/seekbar_tic"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@color/colorTagListNotSelected"
                android:textColor="@color/colorBrightGreen"
                android:progress="25"
                >
            </SeekBar>
        </LinearLayout>

    </LinearLayout>

    <!-- storylist -->
    <LinearLayout
        android:id="@+id/ll_storylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:visibility="gone"
        android:orientation="vertical">
        <!-- story list - epic settings toggle button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <Button style="@style/Widget.AppCompat.Button.Colored"
                android:id="@+id/button_daomaker_epicsettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:paddingLeft="@dimen/activity_horizontal_padding"
                android:paddingRight="@dimen/activity_horizontal_padding"
                android:visibility="gone"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorNewAccent"
                android:background="@color/colorNew"
                android:text="Show Epic Settings"/>
        </LinearLayout>
        <!-- story list -->
        <LinearLayout
            android:id="@+id/ll_stories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_padding"
                android:paddingRight="@dimen/activity_horizontal_padding"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorNew"
                android:text="Selected tags highlighted:" />

            <ListView
                android:id="@+id/listview_stories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@color/colorBrightGreen"
                android:textColor="@color/colorBrightGreen"
                />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <!-- story -->
        <LinearLayout
            android:id="@+id/ll_story"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:visibility="gone"
            android:orientation="vertical">
            <!-- prereq -->
            <LinearLayout
                android:id="@+id/ll_prereqlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_padding"
                    android:paddingRight="@dimen/activity_horizontal_padding"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/colorNew"
                    android:text="Pre-Req:" />

                <Spinner
                    android:id="@+id/spinner_prereqs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@color/colorTagListNotSelected"
                    android:textColor="@color/colorBrightGreen"
                    >
                </Spinner>
            </LinearLayout>
            <!-- actor -->
            <LinearLayout
                android:id="@+id/ll_actorlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_padding"
                    android:paddingRight="@dimen/activity_horizontal_padding"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/colorNew"
                    android:text="Actors:" />

                <Spinner
                    android:id="@+id/spinner_actors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@color/colorTagListNotSelected"
                    android:textColor="@color/colorBrightGreen"
                    android:hint="Actors..."
                    >
                </Spinner>
            </LinearLayout>
            <!-- action -->
            <LinearLayout
                android:id="@+id/ll_actionlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_padding"
                    android:paddingRight="@dimen/activity_horizontal_padding"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/colorNew"
                    android:text="Actions:" />

                <Spinner
                    android:id="@+id/spinner_actions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@color/colorTagListNotSelected"
                    android:textColor="@color/colorBrightGreen"
                    android:hint="Actions..."
                    >
                </Spinner>
            </LinearLayout>
            <!-- outcome -->
            <LinearLayout
                android:id="@+id/ll_outcomelist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_padding"
                    android:paddingRight="@dimen/activity_horizontal_padding"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/colorNew"
                    android:text="Outcomes:" />

                <Spinner
                    android:id="@+id/spinner_outcomes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@color/colorTagListNotSelected"
                    android:textColor="@color/colorBrightGreen"
                    android:hint="Outcomes..."
                    >
                </Spinner>
            </LinearLayout>
            <!-- postop -->
            <LinearLayout
                android:id="@+id/ll_postoplist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_padding"
                    android:paddingRight="@dimen/activity_horizontal_padding"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/colorNew"
                    android:text="Post-Op:" />

                <Spinner
                    android:id="@+id/spinner_postops"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@color/colorTagListNotSelected"
                    android:textColor="@color/colorBrightGreen"
                    >
                </Spinner>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <!-- stage -->
    <LinearLayout
        android:id="@+id/ll_stage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_ringtype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_padding"
                android:paddingRight="@dimen/activity_horizontal_padding"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorNew"
                android:text="Ring Type:" />

            <Spinner
                android:id="@+id/spinner_ringtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@color/colorTagListNotSelected"
                android:textColor="@color/colorBrightGreen"
                >
            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_ringsize_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_padding"
                android:paddingRight="@dimen/activity_horizontal_padding"
                android:visibility="visible"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorNew"
                android:text="Ring Size -> " />
            <EditText
                android:id="@+id/et_ringsize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_edit_padding"
                android:paddingRight="@dimen/activity_horizontal_edit_padding"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:fontFamily="sans-serif-condensed"
                android:text="-"
                android:hint="currently showing..."
                android:inputType="number"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColor="@color/colorNewAccent"
                android:background="@color/colorNew"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_padding"
                android:paddingRight="@dimen/activity_horizontal_padding"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorNew"
                android:text="Locii Size: " />
            <TextView
                android:id="@+id/tv_lociisize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_padding"
                android:paddingRight="@dimen/activity_horizontal_padding"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorNewAccent"
                android:background="@color/transparent"
                android:text="-" />

        </LinearLayout>

    </LinearLayout>

    <!-- actor -->
    <LinearLayout
        android:id="@+id/ll_actor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <CheckBox android:id="@+id/cb_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorNew"
                android:text="Starring on this deviceId"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <!-- fore/back color buttons -->
            <Button style="@style/Widget.AppCompat.Button.Colored"
                android:id="@+id/button_daomaker_forecolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:paddingLeft="@dimen/activity_horizontal_padding"
                android:paddingRight="@dimen/activity_horizontal_padding"
                android:visibility="invisible"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorNewAccent"
                android:background="@color/colorNew"
                android:text=" primary color  "/>
            <Button
                android:id="@+id/button_daomaker_backcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:paddingLeft="@dimen/activity_horizontal_padding"
                android:paddingRight="@dimen/activity_horizontal_padding"
                android:visibility="invisible"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorNewAccent"
                android:background="@color/colorNew"
                android:text="secondary color"/>
        </LinearLayout>
    </LinearLayout>

    <!-- action -->
    <LinearLayout
        android:id="@+id/ll_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_actiontype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_padding"
                android:paddingRight="@dimen/activity_horizontal_padding"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorNew"
                android:text="Action Type:" />

            <Spinner
                android:id="@+id/spinner_actiontype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@color/colorTagListNotSelected"
                android:textColor="@color/colorBrightGreen"
                >
            </Spinner>
        </LinearLayout>
    </LinearLayout>

    <!-- outcome -->
    <LinearLayout
        android:id="@+id/ll_outcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_outcometype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_padding"
                android:paddingRight="@dimen/activity_horizontal_padding"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorNew"
                android:text="Outcome Type:" />

            <Spinner
                android:id="@+id/spinner_outcometype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@color/colorTagListNotSelected"
                android:textColor="@color/colorBrightGreen"
                >
            </Spinner>
        </LinearLayout>
    </LinearLayout>


    <com.adaptivehandyapps.ahathing.DaoMakerViewController
        android:id="@+id/iv_map_setter"
        android:layout_gravity="center_horizontal"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:background="#00ffff"
        android:visibility="gone"
        />

</LinearLayout>
